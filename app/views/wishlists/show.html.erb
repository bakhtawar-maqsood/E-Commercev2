

<h1 class="display-4 text-center">My Wishlist</h1>
<% unless  @product == nil%>
  <table class="table">
    <thead>
      <tr>
        <th>Product name</th>
        <th>Product serial no</th>
        <th>Product price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @product.with_attached_images.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.serial_no %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show Details', product,  class:"link-info" %></td>
          <td><%= link_to 'Remove from wishlist', wishlist_path(:product_id => product.id) , method: :delete ,  class:"link-danger", data: { confirm: 'Are you sure?' }  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else%>
  <p>No Items added to wishlist</p>
<%end%>

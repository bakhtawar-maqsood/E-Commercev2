<%= form_with( scope: :order, url: user_order_path(@user) , local: true) do |form| %>

  <%unless in_cart?(@product.id)%>

    <div class="field">
      <%= form.hidden_field :user_id, value: current_user.id%>
    </div>

    <div class="field">
      <%= form.hidden_field :product_id, value: @product.id%>
    </div>

    <br>

    <div class="field d-inline">
      <label>Quantity</label>
      <%= form.number_field :quantity, value: 1, min: 1, class:"form-control w-25 d-inline"%>
    </div>

    <div class="actions d-inline">
      <%= button_tag(type: 'submit', class: "btn btn-primary d-inline") do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
          <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg>
        Add to Cart
      <%end%>
    </div>

  <%else%>

    <strong class="btn btn-outline-primary disabled m-3">Added to Cart</strong>

  <%end%>

<%end%>
